<!DOCTYPE html>
<html>
  <head>
    <% include partials/head  %> 
  </head>
  <body>
    <% include partials/menu %>
    <div class="container-fluid bg-3 text-center">    
      <h3><%= page %></h3><br>
      <div class="row">
        <table class='table table-striped table-responsive-md btm-table'>
          <thead>
              <tr>
                  <th>Title</th>
                  <th>ISBN</th>
                  <th>Status</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
              </tr>
          </thead>
          <tbody>
              <% book.forEach(function(book){ %>
                  <tr>
                      <td><%=book._id %></td>
                      <td><%=book.title %></td>
                      <td><%=book.status %></td>
                      <td>
                          <form action='updateform/<%=book._id %>' method="POST">
                              <button type="submit">Update</button>
                          </form>
                      </td>
                      <td>
                      <form action='<%=book._id %>/delete' method="POST">
                          <button type="submit">Delete</button>
                      </form>
                  </td>                   
                  </tr>
               <% });  %>   
          </tbody>
      </table>


      </div>
    </div>
    </body>
    <% include partials/script %>
    
  
</html>
